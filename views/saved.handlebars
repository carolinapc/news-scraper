<div class="row">
  {{#each articles}}
  <div class="col s12 m12">
    <div class="card darken-1">
      <div class="card-content">
        <span class="card-title teal-text text-darken-4">{{title}}</span>
        <p>{{summary}}</p>
      </div>
      <div class="card-action">
        <a href="{{url}}" target="_blank" class="btn"><i class="material-icons right">open_in_new</i>View More...</a>
        <a href="#" data-id="{{_id}}" class="btn activator"><i class="material-icons right">chat</i>Comments</a>
        <a href="#" data-id="{{_id}}" class="btn btn-del-article red darken-1"><i class="material-icons right">delete</i>Delete Article</a>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">Comments<i class="material-icons right">close</i></span>
        <p>Here is some more information about this product that is only revealed once clicked on.</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>