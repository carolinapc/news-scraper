<div class="row">
  {{#each articles}}
  <div class="col s12 m12">
    <div class="card darken-1 sticky-action">
      <div class="card-content">
        <span class="card-title black-text text-darken-4">{{title}}</span>
        <p>{{summary}}</p>
      </div>
      <div class="card-action">
        <a href="{{url}}" target="_blank" class="btn"><i class="material-icons right">open_in_new</i>View More...</a>
        <a data-id="{{_id}}" class="waves-effect waves-light btn modal-trigger" href="#modal-{{_id}}"><i class="material-icons right">chat</i>Comments</a>
        <a href="#" data-id="{{_id}}" class="btn btn-del-article red darken-1"><i class="material-icons right">delete</i>Delete Article</a>
      </div>
    </div>
  </div>
  <div id="modal-{{_id}}" class="modal modal-fixed-footer">
    <div class="modal-content">
      <div class="modal-header">
        <div class="wrap-comments">
          <h4><i class="material-icons">comment</i> Comments</h4>
          <a href="#!" class="btn-floating modal-close waves-effect red"><i class="material-icons">close</i></a>
        </div>
        
        <h6>{{title}}</h6>
        <hr>
      </div>

      {{#each comments}}
      <p>
        <a class="btn-floating btn-small waves-effect waves-light red btn-del-comment" data-id="{{_id}}" data-article-id="{{../_id}}"><i class="material-icons">delete</i> </a>
        {{comment}}
      </p>
      {{/each}}
    </div>
    <div class="modal-footer">
        <input placeholder="Type your comment" class="comment" type="text">
        {{!-- <a href="#!" class="btn btn-small waves-effect waves-light">Close</a> --}}
    </div>
  </div>
  {{/each}}
</div>
